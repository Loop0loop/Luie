{
  "name": "luie",
  "version": "0.1.0",
  "description": "흐름을 방해하지 않는 집필 도구",
  "main": "out/main/index.js",
  "type": "module",
  "author": "Luie Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "predev": "pnpm rebuild:electron",
    "dev": "electron-vite",
    "build": "electron-vite build",
    "prepreview": "pnpm rebuild:electron",
    "preview": "electron-vite preview",
    "preview:prod": "pnpm build && NODE_ENV=production electron .",
    "build:mac": "pnpm build && electron-builder --mac --config",
    "build:win": "pnpm build && electron-builder --win --config",
    "build:linux": "pnpm build && electron-builder --linux --config",
    "postinstall": "prisma generate; node scripts/sync-prisma-client.mjs; pnpm rebuild:electron",
    "rebuild:electron": "electron-rebuild --force --module-dir . -w better-sqlite3",
    "generate": "prisma generate; node scripts/sync-prisma-client.mjs",
    "migrate": "prisma migrate dev",
    "migreate:reset": "prisma migrate reset",
    "db:seed": "node prisma/seed.js",
    "push": "npx prisma db push",
    "studio": "prisma studio",
    "typecheck": "tsc --noEmit",
    "check:no-native-dialogs": "node scripts/check-no-native-dialogs.mjs",
    "check:i18n-parity": "node scripts/check-i18n-parity.mjs",
    "check:no-escape-hatches": "node scripts/check-no-escape-hatches.mjs",
    "check:core-complexity": "node scripts/check-core-complexity.mjs",
    "lint": "pnpm run check:no-native-dialogs && pnpm run check:i18n-parity && pnpm run check:no-escape-hatches && eslint src --ext .ts,.tsx",
    "qa:core": "pnpm -s typecheck && pnpm -s lint && pnpm -s check:core-complexity && SKIP_DB_TEST_SETUP=1 pnpm -s vitest tests/main/lifecycle/deepLink.test.ts tests/main/services/syncAuthService.test.ts tests/main/services/syncService.test.ts tests/main/services/syncMapper.test.ts tests/main/services/syncRepository.test.ts tests/main/services/exportService.test.ts tests/renderer/hooks/useTermDragDrop.test.ts",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "test": "pnpm rebuild better-sqlite3 && vitest",
    "test:ui-mode-integrity": "SKIP_DB_TEST_SETUP=1 vitest tests/renderer/services/uiModeIntegrity.test.ts tests/renderer/services/layoutModeActions.integrity.test.ts tests/renderer/stores/editorStore.uiModeIntegrity.test.ts",
    "test:prepare": "electron-rebuild --force",
    "test:e2e": "pnpm test:prepare && pnpm build && playwright test --project=e2e",
    "test:stress": "pnpm test:prepare && pnpm build && playwright test --project=stress",
    "test:vr": "pnpm build && playwright test --project=visual",
    "test:smoke": "pnpm test:prepare && pnpm build && playwright test --project=smoke"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource-variable/noto-sans-jp": "^5.2.10",
    "@fontsource-variable/noto-sans-kr": "^5.2.10",
    "@google/genai": "^1.42.0",
    "@prisma/adapter-better-sqlite3": "^7.4.1",
    "@prisma/client": "7.4.0",
    "@tiptap/core": "^3.20.0",
    "@tiptap/extension-color": "^3.20.0",
    "@tiptap/extension-details": "^3.20.0",
    "@tiptap/extension-focus": "^3.20.0",
    "@tiptap/extension-highlight": "^3.20.0",
    "@tiptap/extension-placeholder": "^3.20.0",
    "@tiptap/extension-task-item": "^3.20.0",
    "@tiptap/extension-task-list": "^3.20.0",
    "@tiptap/extension-text-align": "^3.20.0",
    "@tiptap/extension-text-style": "^3.20.0",
    "@tiptap/extension-underline": "^3.20.0",
    "@tiptap/pm": "^3.20.0",
    "@tiptap/react": "^3.20.0",
    "@tiptap/starter-kit": "^3.20.0",
    "@tiptap/suggestion": "^3.20.0",
    "better-sqlite3": "^12.6.2",
    "clsx": "^2.1.1",
    "diff": "^8.0.3",
    "docx": "^9.6.0",
    "electron-store": "^11.0.2",
    "electron-window-state": "^5.0.3",
    "i18next": "^25.8.13",
    "i18next-browser-languagedetector": "^8.2.1",
    "jszip": "^3.10.1",
    "lucide-react": "^0.574.0",
    "prosemirror-model": "^1.25.4",
    "prosemirror-state": "^1.4.4",
    "prosemirror-view": "^1.41.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-i18next": "^16.5.4",
    "react-resizable-panels": "^4.6.5",
    "react-virtuoso": "^4.18.1",
    "reactflow": "^11.11.4",
    "sanitize-filename": "^1.6.3",
    "tailwind-merge": "^3.5.0",
    "yauzl": "^3.2.0",
    "yazl": "^3.3.1",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "build": {
    "appId": "com.luie.app",
    "productName": "Luie",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.2.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/diff": "^8.0.0",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/yauzl": "^2.10.3",
    "@types/yazl": "^3.3.0",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.24",
    "dotenv": "^17.3.1",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^5.0.0",
    "eslint": "^10.0.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.2",
    "globals": "^17.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "prisma": "7.4.0",
    "tailwindcss": "^4.2.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "overrides": {
      "hono": "4.11.7",
      "lodash": "4.17.23"
    }
  }
}
